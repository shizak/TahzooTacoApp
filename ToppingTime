using System;
using System.Collections.Generic;
using System.Linq;

  public static void ToppingTime(string[] toppings,int[] toppingTime) {
    //string[] toppings = {"Lettuce", "Onion", "Steak", "Cheese"}; Simulation of what comes on a taco
    List < int > toppingTime = new List < int > (); //Time it takes -> Send to William
    if (toppings.Contains("Lettuce")) {
      prepTime.Add(1000);
      //instructions.ToList().ForEach(Console.WriteLine);
    }
    if (toppings.Contains("Onion)) {
      prepTime.Add(1000);
      //instructions.ToList().ForEach(Console.WriteLine);
    }
    if (toppings.Contains("Steak")) {
      prepTime.Add(3000);
      //instructions.ToList().ForEach(Console.WriteLine);
    }
    if (toppings.Contains("Cheese")) {
      prepTime.Add(5000);
      //instructions.ToList().ForEach(Console.WriteLine);
    }
    toppingTime = prepTime.ToArray();
    return toppingTime;
    //Console.WriteLine(tacoTime);Test Statement
    //instructions.ToList().ForEach(Console.WriteLine); Test Statement 
    //instructionsTime.ToList().ForEach(Console.WriteLine); Test Statement
  }
